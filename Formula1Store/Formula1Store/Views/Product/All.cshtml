@model AllProductsQueryModel

@{
    ViewBag.Title = "Products";
}

<style>
    body {
        background-color: #f8f9fa;
    }

    .navbar-brand {
        font-weight: bold;
    }

    .card {
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
        transition: box-shadow 0.3s ease-in-out;
    }

        .card:hover {
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        }
</style>

<div class="container mt-5">
    <div class="row">
        <div class="col-lg-3">
            <h3>Categories</h3>
            <ul id="category-list" class="list-group">
                <li data-category="all" class="list-group-item active">All</li>
                @foreach (var category in Model.Products.Select(p => p.Category).Distinct())
                {
                    <li data-category="@category" class="list-group-item">@category</li>
                }
            </ul>
        </div>
        <div id="product-list" class="col-lg-9 row">
            @foreach (var product in Model.Products)
            {
                <div class="col-lg-4 mb-4">
                    <div class="card h-100">
                        <img class="card-img-top" src="@product.ImageUrl" alt="@product.Name">
                        <div class="card-body">
                            <h5 class="card-title">@product.Name</h5>
                            <p class="card-text">@product.Description</p>
                            <p class="card-text">Price: $@product.Price</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
<script>
    $(document).ready(function () {
        $("#category-list li").on("click", function () {
            $("#category-list li").removeClass("active");
            $(this).addClass("active");
            var selectedCategory = $(this).data("category");
            filterProducts(selectedCategory);
        });

        function filterProducts(category) {
            $("#product-list .col-lg-4").hide();
            if (category === "all") {
                $("#product-list .col-lg-4").show();
            } else {
                $("#product-list .col-lg-4[data-category='" + category + "']").show();
            }
        }
    });
</script>