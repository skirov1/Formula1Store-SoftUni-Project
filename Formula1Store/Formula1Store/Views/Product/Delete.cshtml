@model ProductDetailsModel

@{
    ViewBag.Title = "Delete Product";
}

<div class="container">
    <main role="main" class="pb-3">
        <h2 class="text-center">@ViewBag.Title</h2>
        <hr />

        <form asp-action="Delete">
            <div class="row">
                <div class="col-md-4">
                    <img class="card-img-top" src="@Model.ImageUrl" alt="Product Image">
                </div>
                <div class="col-md-8">
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" disabled="disabled" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <input asp-for="Description" class="form-control" disabled="disabled" />
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Delete" class="btn btn-danger" />
                    </div>
                </div>
            </div>
        </form>
    </main>
</div>

