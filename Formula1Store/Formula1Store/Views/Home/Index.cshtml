@model IEnumerable<ProductHomeModel>

@{
    ViewData["Title"] = "F1 Merch Store";
    bool first = true;
}

<style>
    .card {
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
        transition: box-shadow 0.3s ease-in-out;
    }

        .card:hover {
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        }

        .card img {
            height: 200px;
            object-fit: cover;
        }
</style>

<div class="container mt-5">
    <div class="row">
        <div class="col-lg-6">
            <h1>Welcome to the Formula 1 Merch Store</h1>
            <p>Find the best Formula 1 merchandise for fans of all ages.</p>
            <a asp-controller="Product" asp-action="All" class="btn btn-primary">Shop Now</a>
        </div>
        <div class="col-lg-6">
            <img src="/img/F1-logo.png" alt="Formula 1 Banner" class="img-fluid">
        </div>
    </div>
</div>

<div id="carouselExampleControls" class="align-content-center carousel slide mb-5" data-bs-ride="carousel">
    <div class="carousel-inner">
        @foreach (var product in Model)
        {
            <div class="carousel-item @(first ? "active" : string.Empty) justify-content-center">
                <img class="d-block w-50" style="height:500px"
                     src="@product.ImageUrl" alt="@product.Name">
                <div class="carousel-caption d-none d-md-block">
                    <h5>
                        <a class="btn btn-primary" asp-controller="Product" asp-action="Details"
                           asp-route-id="@product.Id"> @product.Name</a>
                    </h5>
                </div>
            </div>

            first = false;
        }
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span style="color: black">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span style="color: black">Next</span>
    </button>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
