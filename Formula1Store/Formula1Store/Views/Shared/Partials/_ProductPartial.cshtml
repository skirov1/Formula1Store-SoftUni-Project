@model ProductViewModel

<div class="card h-100">
    <img class="card-img-top" src="@Model.ImageUrl" alt="@Model.Name">
    <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
        <p class="card-text">Price: $@Model.Price</p>
    </div>
    <div class="card-footer">
        <a class="btn btn-primary btn-sm mr-2" asp-controller="Product" asp-action="ProductDetails"
           asp-route-id="@Model.Id">Details</a>
        <a class="btn btn-success btn-sm" asp-controller="Cart" asp-action="AddToCart"
           asp-route-id="@Model.Id">Add to Cart</a>
    </div>
</div>
